<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0a0a0a"
    android:padding="20dp">

    <!-- Header Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1a1a1a"
        android:padding="24dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NYXIS"
            android:textSize="42sp"
            android:textColor="#00FF88"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L O A D E R"
            android:textSize="16sp"
            android:textColor="#888888"
            android:letterSpacing="0.2"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#00FF88"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call of Duty Mobile"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2a2a2a"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="12sp"
            android:textColor="#00FF88"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Inject Button -->
    <Button
        android:id="@+id/btnInject"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/inject_button"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#00FF88"
        android:layout_marginTop="32dp"
        android:elevation="8dp" />

    <!-- Support Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect With Me"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSupport"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/support_text"
            android:textSize="15sp"
            android:textColor="#00FF88"
            android:background="#00000000"
            style="?android:attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnContact"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/contact_text"
            android:textSize="15sp"
            android:textColor="#00A8FF"
            android:background="#00000000"
            android:layout_marginTop="8dp"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/made_by"
        android:textSize="11sp"
        android:textColor="#555555"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>